Table users {
  id integer [primary key]
  name varchar
  email varchar
password text
profilePicture varchar
}

Table categories {
  id integer [primary key]
  name varchar
  description text
}

Table items {
  id integer [primary key]
  categoryId integer
  name varchar
  price float
    description text
    stock integer
}

Table orders {
  id integer [primary key]
  userId integer
 itemId integer
  promoId integer
 status varchar
 quantity integer 
 totalPrice integer
}

Table promo {
  id integer [primary key]
description string
promoImage varchar
}

Table payment {
  id integer [primary key]
method string
orderId integer
}


ref: orders.userId > users.id
ref: orders.itemId > items.id
ref: payment.orderId > orders.id
ref: orders.promoId > promo.id